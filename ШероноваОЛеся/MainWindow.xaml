<Window x:Class="ШероноваОЛеся.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ШероноваОЛеся"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Button Content ="Войти" HorizontalAlignment="Left" Margin="359,399,0,0" VerticalAlignment="Top" Width="361" Height="61" Background="#de4949" FontSize="20" Click="Button_Click">

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15 15 5 5 "/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content ="Регистрация" HorizontalAlignment="Left" Margin="359,466,0,0" VerticalAlignment="Top" Width="361" Height="60" Background="#de4949" FontSize="20" Click="Button_Click_1">

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value=" 5 5 15 15"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="337,34,0,0" VerticalAlignment="Top" Width="347" FontSize="36" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.26"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.595"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Почта" HorizontalAlignment="Left" Margin="336,127,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.537,2.151" FontSize="20" Height="44" Width="78"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="342,236,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.537,2.151" FontSize="20" Height="44" Width="93"/>
        <TextBox x:Name="Поччта" HorizontalAlignment="Left" Margin="342,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" Height="47" TextChanged="TextBox_TextChanged"/>
        <Image HorizontalAlignment="Left" Height="166" Margin="65,30,0,0" VerticalAlignment="Top" Width="195" RenderTransformOrigin="0.398,0.444" Source="C:\Users\User\Desktop\ШероноваОЛеся\images\ало.png" />
        <Label Content="Востановить пароль" HorizontalAlignment="Left" Margin="591,325,0,0" VerticalAlignment="Top" Height="31" Width="144"/>
        <TextBox x:Name="Ппароль" HorizontalAlignment="Left" Margin="342,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="395" Height="47"/>

    </Grid>
</Window>
